<section class="site-bg" aria-hidden="true">
    <div class="glow glow-a"></div>
    <div class="glow glow-b"></div>
    <div class="lines"></div>
    <div class="noise"></div>
  </section>
  
  <style>
  .site-bg{
    position: fixed; inset: 0; z-index: -1;
    background: #0b0f15;        /* dark base */
    pointer-events: none; overflow: hidden; isolation: isolate;
  }
  
  /* Two animated glow layers (hue-rotating, very soft) */
  .glow{ position:absolute; inset:-30% -20% -40% -20%; filter: blur(6px); will-change: filter, transform; }
  .glow-a{
    background:
      radial-gradient(900px 700px at 50% -10%, rgba(160,80,255,.22), transparent 60%),
      radial-gradient(1100px 800px at 50%  10%, rgba(255,60,150,.14), transparent 65%);
    animation: hue 36s linear infinite, floaty 18s ease-in-out infinite alternate;
  }
  .glow-b{
    background:
      radial-gradient(700px 600px  at 15% 35%, rgba(100,160,255,.12), transparent 65%),
      radial-gradient(900px 700px  at 85% 40%, rgba(240,120,255,.08), transparent 70%);
    animation: hue 50s linear infinite reverse, floaty 24s ease-in-out infinite alternate;
  }
  @keyframes hue   { to { filter: blur(6px) hue-rotate(360deg); } }
  @keyframes floaty{ from { transform: translate3d(0,0,0); } to { transform: translate3d(0,10px,0); } }
  
  /* Very subtle vertical guide lines */
  .lines{
    position:absolute; inset:-10% 0 -30% 0;
    background: repeating-linear-gradient(to right, rgba(255,255,255,.04) 0 1px, transparent 1px 25%);
    mask-image: radial-gradient(90% 100% at 50% 0%, #000 35%, transparent 80%);
  }
  
  /* Whisper of film grain so it doesnâ€™t feel flat (super light) */
  .noise{
    position:absolute; inset:0; opacity:.03; mix-blend-mode: soft-light;
    background-image:url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='120' height='120' viewBox='0 0 120 120'><filter id='n'><feTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='2' stitchTiles='stitch'/></filter><rect width='120' height='120' filter='url(%23n)' opacity='1'/></svg>");
  }
  </style>
  