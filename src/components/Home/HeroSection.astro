---
/** Content */
const title = "I'm Juniel, WordPress Developer, Seo Specialist & a Front-End Web Developer Based in Negros Oriental";
const blurb =
  "Helping businesses build, optimize, and grow their online presence with custom WordPress development and effective SEO strategies.";

const cta1 = { href: "Myworksindex", label: "See My Works" };
const cta2 = { href: "#book-now", label: "Schedule a Call" };

/** Thumbnails in /public/works/ (png/jpg). */
const colA = ["/works/AS.jpg","/works/atlanta.jpg","/works/madden.jpg","/works/hEATRX1.jpg","/works/PestManagement.jpg"];
const colB = ["/works/Allcountry.jpg","/works/chapman.jpg","/works/Indytojan.jpg","/works/concreteleveling.jpg","/works/rooftroppers.jpg"];

/** Fallback to placeholder if a file is missing */
function fallback(list: string[], i: number) {
  return list[i] ?? `https://picsum.photos/seed/${i + Math.random()}/640/480`;
}
---

<section class="hero">
  <div class="wrap">
    <!-- LEFT -->
    <div class="left fade-in fade-1">
      <h1 class="title fade-in fade-2">{title}</h1>
      <p class="sub fade-in fade-3">{blurb}</p>

      <div class="cta fade-in fade-4">
        <a class="btn btn-solid" href=Myworksindex>{cta1.label}</a>
        <a class="btn btn-ghost" href=#book-now>{cta2.label}</a>
      </div>

      <!-- Ratings row -->
      <div class="ratings fade-in fade-5">
        <a class="badge" href="#" aria-label="Google reviews">
          <span class="logo google" aria-hidden="true">
            <svg viewBox="0 0 48 48" width="22" height="22">
              <path fill="#FFC107" d="M43.6 20.5h-1.8V20H24v8h11.3C33.9 31.6 29.4 35 24 35 16.8 35 11 29.2 11 22s5.8-13 13-13c3.2 0 6.1 1.2 8.3 3.2l5.7-5.7C34.6 3.1 29.6 1 24 1 10.7 1 0 11.7 0 25s10.7 24 24 24 24-10.7 24-24c0-1.5-.1-3-.4-4.5z"/>
              <path fill="#FF3D00" d="M2.8 14.7l6.6 4.8C11.5 15.3 17.2 12 24 12c3.2 0 6.1 1.2 8.3 3.2l5.7-5.7C34.6 3.1 29.6 1 24 1 15.4 1 8.1 5.5 4 12.1z"/>
              <path fill="#4CAF50" d="M24 49c5.3 0 10.1-1.8 13.9-4.8l-6.4-5.3C29.4 40.9 26.9 42 24 42 17.4 42 11.9 37.6 9.9 31.7l-6.7 5.2C6.6 43.9 14.7 49 24 49z"/>
              <path fill="#1976D2" d="M43.6 20.5H24v8h11.3C34.2 32.1 29.6 35 24 35c-6.6 0-12.1-4.4-14.1-10.3l-6.7 5.2C6.7 39.4 14.7 45 24 45c11.7 0 21.5-9.5 21.5-21.2 0-1.1-.1-2.2-.3-3.3z"/>
            </svg>
          </span>
          <span class="stars" aria-hidden="true">
            {Array.from({length:5}).map(() => (
              <svg viewBox="0 0 24 24" width="14" height="14"><path fill="#F6BF26" d="M12 17.3l-6.18 3.6 1.64-7.03L2 9.5l7.19-.62L12 2.3l2.81 6.58L22 9.5l-5.46 4.37 1.64 7.03z"/></svg>
            ))}
          </span>
          <span class="count g">30+ REVIEWS</span>
        </a>

        <a class="badge" href="#" aria-label="Clutch reviews">
          <span class="logo clutch" aria-hidden="true">
            <svg viewBox="0 0 48 48" width="22" height="22">
              <circle cx="24" cy="24" r="22" fill="#0C1B2A"/>
              <path fill="#FF5A52" d="M32 24a8 8 0 1 1-16 0 8 8 0 0 1 16 0z"/>
            </svg>
          </span>
          <span class="stars" aria-hidden="true">
            {Array.from({length:5}).map(() => (
              <svg viewBox="0 0 24 24" width="14" height="14"><path fill="#FF5A52" d="M12 17.3l-6.18 3.6 1.64-7.03L2 9.5l7.19-.62L12 2.3l2.81 6.58L22 9.5l-5.46 4.37 1.64 7.03z"/></svg>
            ))}
          </span>
          <span class="count c">20+ reviews</span>
        </a>
      </div>
    </div>

    <!-- RIGHT (two columns only) -->
    <div class="right fade-in fade-6">
      <div class="wall">
        <!-- Column A (scrolls UP) -->
        <div class="col up">
          {Array.from({ length: 2 }).map(() => (
            <div class="stack">
              {Array.from({ length: colA.length }).map((_, i) => (
                <figure class="card">
                  <img src={fallback(colA, i)} alt="Work screenshot" loading="eager" />
                </figure>
              ))}
            </div>
          ))}
        </div>

        <!-- Column B (scrolls DOWN) -->
        <div class="col down">
          {Array.from({ length: 2 }).map(() => (
            <div class="stack">
              {Array.from({ length: colB.length }).map((_, i) => (
                <figure class="card">
                  <img src={fallback(colB, i)} alt="Work screenshot" loading="lazy" />
                </figure>
              ))}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* ==== Fade-in utilities (CSS-only, no JS) ==== */
@keyframes fadeUp {
  from { opacity: 0; transform: translateY(12px); }
  to   { opacity: 1; transform: translateY(0); }
}
.fade-in { opacity: 0; animation: fadeUp .7s cubic-bezier(.22,.61,.36,1) forwards; will-change: transform, opacity; }
.fade-1 { animation-delay: .05s; }
.fade-2 { animation-delay: .15s; }
.fade-3 { animation-delay: .25s; }
.fade-4 { animation-delay: .35s; }
.fade-5 { animation-delay: .45s; }
.fade-6 { animation-delay: .55s; }

@media (prefers-reduced-motion: reduce) {
  .fade-in { animation: none; opacity: 1; transform: none; }
}

/* ===== Section layout (no local typography) ===== */
.hero{
  position:relative;
  padding-top:calc(clamp(2.5rem, 7vw, 6rem) + 92px);
  padding-bottom:clamp(2.2rem,6vw,5rem);
  color:#e8e8ea;  /* keep light text on dark bg */
  overflow:hidden;
  padding-top: 5px;
}
.wrap{
  position:relative; z-index:100;
  max-width:1200px;margin:0 auto;
  display:grid;align-items:center;gap:1.25rem;
  grid-template-columns:1fr;
  padding:0 16px;
}
@media(min-width:980px){ .wrap{ grid-template-columns: 1fr 1.1fr; gap: 2rem; } }

/* LEFT (no font props) */
.title{ margin:0; }
.sub  { margin-top:.9rem; max-width:60ch; }

/* CTAs (no font props) */
.cta{ margin-top:1.15rem;display:flex;gap:.7rem;flex-wrap:wrap; }
.btn{ display:inline-block;text-decoration:none;cursor:pointer; border-radius:14px;padding:12px 16px;border:1px solid #3a3f52; }
.btn-solid{ background:#e7eaee;color:#0c0f15;border-color:#e7eaee; }
.btn-ghost{ background:transparent;color:#e7eaee; }
.btn-ghost:hover{ background:#1b2030; }
@media(max-width:430px){ .btn{ width:100%; text-align:center; } }

/* Ratings (no local typography) */
.ratings{ margin-top:1.2rem; display:flex; gap:34px; flex-wrap:wrap; align-items:flex-start; }
.badge{
  display:grid;
  grid-template-columns: 32px auto;
  grid-template-rows: auto auto;
  column-gap:10px;
  align-items:center;
  text-decoration:none;
  color:#c9cfdb;
}
.badge:hover{ filter:brightness(1.08); }
.badge .logo  { grid-column:1 / 2; grid-row:1 / 2; }
.badge .stars { grid-column:2 / 3; grid-row:1 / 2; }
.badge .count { grid-column:2 / 3; grid-row:2 / 3; margin-top:6px; }
.logo svg{ display:block; }
.stars svg{ display:inline-block; vertical-align:middle; margin-right:2px; }

/* RIGHT: TWO-COLUMN MOVING WALL */
.right{ position:relative; }
.wall{
  display:grid;
  justify-content:end;
  grid-template-columns: repeat(1, minmax(180px, 1fr));
  gap:14px;
  height:min(520px, 70vh);
  mask-image:linear-gradient(to bottom,transparent 0%,#000 12%,#000 88%,transparent 100%);
}
@media(min-width:700px){
  .wall{
    grid-template-columns: repeat(2, minmax(260px, 1fr));
    gap:20px;
    height:min(720px, 78vh);
  }
}
.col{ overflow:hidden;border-radius:16px; }
.stack{ display:grid;gap:14px; }
.card{ margin:0;padding:0;border-radius:16px;overflow:hidden;background:#0f1218; }
.card img{
  width:100%;
  height:200px;
  object-fit:cover;display:block;
}
@media(min-width:700px){ .card img{ height:280px; } }

/* Opposite scroll directions */
@keyframes scrollUp   { from { transform:translateY(0%); } to { transform:translateY(-50%); } }
@keyframes scrollDown { from { transform:translateY(-50%); } to { transform:translateY(0%); } }
.col.up   .stack{ animation:scrollUp   22s linear infinite; }
.col.down .stack{ animation:scrollDown 18s linear infinite; }
.col:hover .stack{ animation-play-state:paused; }
</style>
